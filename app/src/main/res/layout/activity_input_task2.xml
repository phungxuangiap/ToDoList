<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".inputTask"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/mainOfInputView"
    >
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/returnFromInfoPage"
        android:text="RETURN"
        android:textSize="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_margin="24dp"
        android:background="@drawable/edit_background"
        android:orientation="vertical"
        android:gravity="top"
        android:id="@+id/inputView"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleInfoTask"
            android:text = "Do home work"
            android:gravity="center"
            android:textSize="40dp"
            android:layout_marginTop="24dp"
            android:textStyle="bold"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="24dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="17/2/2023"
                android:gravity="center"
                android:id="@+id/startTime"
                android:textSize="20dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DeadLine"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="24dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="17/2/2023"
                android:gravity="center"
                android:textSize="20dp"
                android:id="@+id/deadlineTime"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="24dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mâu thuẫn là cái vốn có của mọi sự vật, hiện tượng. Tồn tại không phụ thuộc vào ý thức con người"
                android:gravity="center"
                android:id="@+id/descriptionText"
                android:textSize="20dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="24dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Is completing"
                android:gravity="center"
                android:textSize="20dp"
                android:id="@+id/statusText"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="24dp"
            />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="In month"
                android:gravity="center"
                android:id="@+id/orderText"
                android:textSize="20dp"
                />

        </LinearLayout>
        <Button
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="right"
            android:background="@drawable/edit"
            android:layout_margin="24dp"
            android:id="@+id/editBtn"
            />
    </LinearLayout>

</LinearLayout>